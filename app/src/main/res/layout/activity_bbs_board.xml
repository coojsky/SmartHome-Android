<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="0">

    <TableRow
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@drawable/linetop">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:drawableLeft="@drawable/ic_description_black_24dp"
            android:drawableStart="@drawable/ic_description_black_24dp"
            android:gravity="center"
            android:text="  게시판 글"
            android:textColor="#FFFFFF" />
    </TableRow>

    <TableRow
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginBottom="2dp"
        android:background="@drawable/line"
        android:layout_margin="3dp"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="글제목"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/BbsTitle"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:background="#ffffff"
            android:text="게시판제목"
            android:maxLength="20"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="#000000"/>



    </TableRow>

    <TableRow
        android:layout_width="0dp"
        android:background="@drawable/line"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_margin="3dp">

        <TextView
            android:background="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="#ffffff"
            android:text="작성자"
            android:gravity="center"/>

        <TextView
            android:id="@+id/BbsUserID"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:maxLength="20"
            android:text="작성자"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="#000000"
            android:background="#ffffff"
            />

    </TableRow>

    <TableRow
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@drawable/line"
        android:gravity="center"
        android:layout_margin="3dp">

        <TextView
            android:background="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="#ffffff"
            android:text="작성일자"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/BbsDate"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:layout_margin="7dp"
            android:maxLength="20"
            android:textSize="15dp"
            android:gravity="center"
            android:text="작성일자"
            android:textColor="#000000"
            android:background="#ffffff"
            />


    </TableRow>

    <!--<TableRow-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:gravity="center">-->

        <!--<TextView-->
